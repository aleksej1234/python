print("вы в лаберинте тут розвилка ,налево,прямо,напрво.")
vybor = input("выберите:налево,направо,прямо")
while vybor != "направо" and vybor != "прямо" and vybor != "налево" and vybor != "бонус":
    vybor = input("выбирите: направо , налево , прямо")
if vybor == "направо":
    print("там был голодный медведь")
    print("игра окончена")
if vybor == "налево":
    print("там был огромный костер")
    print("игра окончена")
if vybor == "прямо":
    print("БОНУС ")
    print("БОНУС вы прошлт лабиринт")
    print("активация бонус")
    print("С ПОБЕДОЙ")
